{
  "name": "@research-paper-tracker/backend",
  "version": "1.0.0",
  "private": true,
  "prisma": {
    "schema": "src/db/schema.prisma"
  },
  "scripts": {
    "build": "pnpm --filter @shared build && prisma generate && tsc",
    "start": "node dist/server.js",
    "dev": "nodemon --watch src --exec ts-node src/server.ts",
    "db:generate": "prisma generate",
    "db:push": "prisma db push",
    "db:studio": "prisma studio"
  },
  "dependencies": {
    "shared": "workspace:*",
    "express": "^5.1.0",
    "cors": "^2.8.5",
    "@prisma/client": "^6.3.1"
  },
  "devDependencies": {
    "typescript": "^5.9.3",
    "@types/node": "^22.0.0",
    "@types/express": "^5.0.6",
    "@types/cors": "^2.8.17",
    "ts-node": "^10.9.2",
    "nodemon": "^3.1.0",
    "prisma": "^6.3.1"
  }
}
